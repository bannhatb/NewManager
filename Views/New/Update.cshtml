@model New;
@{
    ViewData["Title"] = "New Create Page";
    var categories = ViewBag.Categories;
    var n = Model;
}
 
<form action="/New/Save" method="post">
    <input type="hidden" class="form-control" id="Id" name="Id" value="@n.Id" readonly>
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@n.Title">
    </div>
    <div class="form-group">
        <label for="Slug">Slug</label>
        <input type="text" class="form-control" id="Slug" name="Slug" value="@n.Slug>
    </div>
    <div class="form-group">
        <label for="Summary">Summary</label>
        <input type="text" class="form-control" id="Summary" name="Summary" value="@n.Summary>
    </div>
    <div class="form-group">
        <label for="Avatar">Avatar</label>
        <input type="text" class="form-control" id="Avatar" name="Avatar" value="@n.Avatar>
    </div>
    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select class="form-control" id="CategoryId" name="CategoryId">
            @foreach (var category in categories)
            {
                @if (category.Id == n.CategoryId)
                {
                    <option value="@category.Id" selected="selected">@category.Name</option>
                }
                else
                {
                    <option value="@category.Id">@category.Name</option>
                }
            }
        </select>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
