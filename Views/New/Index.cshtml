@model List<New>;
@{
    ViewData["Title"] = "New Page";
    var news = Model;
}

<div class="text-center">
    <h1 class="display-4">Welcome News Page</h1>
    <table class="table table-stripd table-hover">
        <thead>
            <th>ID</th>
            <th>Title</th>
            <th>Slug</th>
            <th>Category</th>
            <th>Summary</th>
            <th>Avatar</th>
            <th>Options</th>
        </thead>
        <tbody>
            @foreach (var n in news)
            {
                <tr>
                    <td>@n.Id</td>
                    <td>@n.Title</td>
                    <td>@n.Slug</td>
                    <td>@n.Category.Name</td>
                    <td>@n.Summary</td>
                    <td>@n.Avatar</td>
                    <td>
                        <a href="/Product/Update/@n.Id" class="btn btn-success">Update</a>
                        <a href="/Product/Delete/@n.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/New/Add" class="btn btn-primary">Add Product</a>
</div>